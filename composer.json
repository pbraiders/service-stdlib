{
    "name": "pbraiders/stdlib",
    "description": "Pbraiders stdlib component",
    "homepage": "https://github.com/pbraiders/stdlib",
    "readme": "README.md",
    "time": "2019-09-10",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Olivier Jullien",
            "homepage": "https://github.com/ojullien",
            "email": "contact@pbraiders.fr"
        }
    ],
    "require": {
        "php": "^7.3",
        "league/uri-parser": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Pbraiders\\Stdlib\\": "src/"
        },
        "files": [
            "src/Stdlib.php"
        ]
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpmd/phpmd": "@stable",
        "phpstan/phpstan": "^0.11.15",
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "*",
        "vimeo/psalm": "^3.4"
    },
    "autoload-dev": {
        "psr-4": {
            "PbraidersTest\\Stdlib\\": "tests/"
        },
        "files": [
            "src/Stdlib.php"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "vendor-dir": "vendor"
    },
    "scripts": {
        "check": "vendor/bin/phpcs --standard=./phpcs.xml",
        "fix": "vendor/bin/phpcbf --standard=./phpcs.xml",
        "fixer": "vendor/bin/php-cs-fixer fix --verbose src",
        "mess": "vendor/bin/phpmd src text ./phpmd.xml --exclude '*/vendor/*,*/old/*'",
        "analyse": "vendor/bin/phpstan analyse src --level=max -c ./phpstan.neon --no-progress",
        "test": "vendor/bin/phpunit --colors=always"
    }
}
